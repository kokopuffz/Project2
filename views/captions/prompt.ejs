<h2>prompt</h2>
<% let alttext = 1 %> 
<% let picid = 1 %>  

<div>
    <% alttext = catpics[picid].alttext %>
</div>  

<div>
  <form action="/captions/prompt/" method="POST">
    <label for="caption">write your caption here:</label>
    <input name="caption" id="caption" />
    <button type="submit">submit caption</button>
    <input type="hidden" name="catpicid" id="catpicid" value="<%= picid %>" />
  </form>
</div>


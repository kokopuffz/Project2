<div>
  <h2>image</h2>
  <img src="<%= catid.imgurl %> " />
</div>

<div>
  <ul>
    <label for="captions">all captions</label>
    <% for( let i = 0; i < captions.length; i++ ) { %> 
      <li>
        <form action="/captions/results/<%=captions[i].id %>/vote" method="POST">
          <p><%= captions[i].votes %></p>
          <p><%= captions[i].text %></p>
          <% if(user.id === captions[i]['votes.userId']){ %> 
            <button type="submit" style="background-color: green;" disabled>voted</button>
            <% } else { %> 
              <input
                type="hidden"
                name="imageid"
                value="<%= captions[i].catpicId%>"
              />
              <button type="submit" name="" id="votingbutton" value="">
              vote 
              </button>
            <% } %> 
          
        </form>
        <% } %> 
    </li>
  </ul>
</div>
<div>
  <a href="/captions/prompt"><button>Try Another</button></a>
</div>


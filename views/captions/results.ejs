<div class="container d-flex justify-content-center mt-4">
  <div class="card border-secondary mb-3 center" style="max-width: 40rem;">
    <h3 class="card-header">alt-text: <small class="text-primary"><%= catid.alttext  %></small></h3>
    <img class=".img-fluid" src="<%= catid.imgurl %>" sizes="(min-width:400px) 80vw, 100vw">
    <div class="card-body">
      <div class="card-text">all captions</div>
      <ul class="list-group list-group-flush">
      <% for( let i = 0; i < captions.length; i++ ) { %> 
        <li class="list-group-item">
        <form action="/captions/results/<%=captions[i].id %>/vote" method="POST">
          <p class="text-muted">vote count: <%= captions[i].votes %></p>
          <p><%= captions[i].text %></p>
          <% if(user.id === captions[i]['votes.userId']){ %> 
            <button type="submit" class="btn btn-success" style="background-color: green;" disabled>voted</button>
          <% } else { %> 
            <input 
                type="hidden"
                name="imageid"
                value="<%= captions[i].catpicId%>"
              />
            <button class="btn btn-outline-secondary" type="submit" name="" id="votingbutton" value="">
              vote 
            </button>
            <% } %>
        </form>
        </li>
      <% } %> 
      </ul>
    <div  iv class="card-footer text-muted">
      <a href="/captions/prompt"><button class="btn btn-primary">Try Another</button></a>
    </div>
    </div>
  </div>
</div>



<div>
  <% if(user.username) { %>
  <h2>meow! <%= user.username %></h2>
  <% } else { %>
  <h2>hello <%= user.email %> !</h2>
  <a href="/users/newusername">would you like to create a username?</a>
  <% } %>
</div>

<div>
  <ul>
    <h3>Your kitty collection!</h3>
    <% if (captions.length < 1) { %> 
      <h4>start collecting some now</h4>
      <% } else { %> 
        <% captions.forEach(caption => { %>
        <li> 
          <img src="<%=caption['catpic.imgurl']%> "
        </li>
    <% }) %> 
  <% } %> 
  </ul>
</div>

<div>
  <ul> 
    <h3>all your captions</h3>
    <% captions.forEach(caption => { %>
      <li> 

        <a href="/users/kittytree/<%= caption.id %>"
        <p><%= caption.text %> </p>  
      </li>
    <% }) %>
  </ul>
</div>

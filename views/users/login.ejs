<h1>Welcome to the login page!</h1>


<form action="/users/login" method="POST">
  <fieldset>
    <legend>Log in here!<small>if you don't have a login, sign up <a href="/users/new">here</a>:3</small></legend>
    <% if(typeof error != "undefined" && error) { %> 
  <em style="color:red"><%= error %> </em>
<% } %> 
    <div class="form-group"> 
      <label for="email" class="form-label mt-4">Email:</label>
      <input type="email" class="form-control" name="email" id="email">
    </div> 
    <div class="form-group"> 
      <label for="password" class="form-group mt-4">Password:</label>
      <input type="password" class="form-control" name="password" id="password">
    </div>  
    <button class="btn btn-outline-secondary" type="submit">log me in!</button>
  </fieldset>
</form>

